<% include ../partials/header %>

<h1 class="display-4 text-center">Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product) { %>
            <tr>
                <td scope="row"><%= product.id %></td>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td>
                    <a class="btn btn-warning" href="/products/<%= product.id %>" role="button">Edit</a>
                </td>
                <td>    
                    <a class="btn btn-danger" href="/products/<%= product.id %>" role="button">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<% include ../partials/footer %>