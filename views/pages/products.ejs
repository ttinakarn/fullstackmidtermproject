<% include ../partials/header %>

<div class="row">
    <div class="col">
        <h1>Products</h1> 
    </div>
    <div class="col" style="margin: auto;">
        <a name="" id="" class="btn btn-info float-right" href="/products/insert" role="button">Add new product</a>
    </div>
</div>
    

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product) { %>
        <tr>
            <td scope="row">
                <%= product.id %>
            </td>
            <td>
                <%= product.title %>
            </td>
            <td>
                <%= product.price %>
            </td>
            <td>
                <a class="btn btn-secondary" href="/products/<%= product.id %>" role="button">Edit</a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>

<% include ../partials/footer %>