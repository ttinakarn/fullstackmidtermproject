<% include ../partials/header %>

<div class="row">
    <div class="col-2">
        <a href="/users/<%= user[0].user_id %>" class="h1 text-dark">&lt; Back</a>
    </div>
    <div class="col-10">
        <h1>Purchase ID: <%= user[0].purchase_id %></h1>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-header">
            Invoice
            <strong>
                <%= user[0].created_at.toDateString() %></strong>
            <span class="float-right"> <strong>Status:</strong>
                <%= user[0].status%></span>

        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="mb-3">To:</h6>
                    <div>
                        <strong>
                            <%= user[0].name %></strong>
                    </div>
                    <div>
                        <%= user[0].address %>
                    </div>
                    <div>
                        <%= user[0].state %>
                        <%= user[0].zipcode %>
                    </div>
                    <div>Email:
                        <%= user[0].email %>
                    </div>
                </div>
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Item</th>

                            <th class="right">Unit Cost</th>
                            <th class="center">Qty</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.forEach(function(user) { %>
                        <tr>
                            <td class="center"></td>
                            <td class="left strong">
                                <%= user.title %>
                            </td>

                            <td class="right">
                                <%= user.price %>
                            </td>
                            <td class="center">
                                <%= user.quantity %>
                            </td>
                            <td class="right">
                                <%= add = user.price*user.quantity %>
                            </td>
                        </tr>
                        <p hidden>
                            <%= total = total + add %>
                        </p>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>
                                        <%= total %></strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>