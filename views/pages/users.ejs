<% include ../partials/header %>

<div class="row">
    <div class="col">
        <h1>Users</h1>
    </div>
    <div class="col" style="margin: auto;">
        <a class="btn btn-info float-right" href="/users/insert" role="button">Add new user</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>Purchase History</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user) { %>
        <tr>
            <td scope="row">
                <%= user.id %>
            </td>
            <td>
                <%= user.email %>
            </td>
            <td>
                <%= user.password %>
            </td>
            <td>
                <a class="btn btn-secondary" href="/users/<%= user.id %>" role="button">View</a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>

<% include ../partials/footer %>